{
  "name": "flangd",
  "dipslayName": "flangd",
  "description": "Language Client for Flang",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:fortran",
    "onLanguage:fortran-modern",
    "onLanguage:fortran_fixed-form",
    "onLanguage:FortranFreeForm",
    "onCommand:flangd.activate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flangd.activate",
        "title": "Activate flangd"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "flangd configuration",
      "properties": {
				"flangd.trace.server": {
					"scope": "resource",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "messages",
					"description": "Traces the communication between VS Code and the language server."
        },
        "flangd.flangdPath": {
          "scope": "resource",
          "type": "string",
          "default": "flangd.py",
          "description": "Path to flangd."
        },
        "flangd.f18Path": {
          "scope": "resource",
          "type": "string",
          "default": "f18",
          "description": "Path to f18."
        },
        "flangd.f18Args": {
          "scope": "resource",
          "type": "string",
          "default": "-fparse-only -fdebug-semantics",
          "description": "Arguments that are passed to f18 on every use."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "vscode-languageclient": "^5.3.0-next.6"
  }
}
